%% Get OTF from PSF layers
function mm = getOTF0417(m)
global zeroImageEx;
global exsize;

zeroPadding = zeroImageEx;
zeroPadding( 1:size(m,1), 1:size(m,2),:) = m;
m = zeroPadding;
mc = 1 + floor(size(m)/2);
me = mc + exsize - 1;
exindices = {mod((mc(1):me(1))-1,  size(m,1))+1,...
             mod((mc(2):me(2))-1,  size(m,2))+1};
m = m(exindices{:});
mm = fft2(m);

end




